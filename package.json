{
	"name": "todolist-vscode-extension",
	"displayName": "todolist-vscode-extension",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:todoList.addTodo",
		"onView:todoListView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todoList.addTodo",
				"category": "ToDo List",
				"title": "Add New Todo",
				"icon": {
					"light": "resources/light/plus.svg",
					"dark": "resources/dark/plus.svg"
				}
			},
			{
				"command": "todoList.complete",
				"category": "ToDo List",
				"title": "Complete",
				"icon": {
					"light": "resources/light/check.svg",
					"dark": "resources/dark/check.svg"
				}
			},
			{
				"command": "todoList.reopen",
				"category": "ToDo List",
				"title": "Reopen",
				"icon": {
					"light": "resources/light/discard.svg",
					"dark": "resources/light/discard.svg"
				}
			},
			{
				"command": "todoList.editTitle",
				"category": "ToDo List",
				"title": "Edit Title"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "todolist-explorer",
					"title": "TODO Explorer",
					"icon": "media/todos.svg"
				}
			]
		},
		"views": {
			"todolist-explorer": [
				{
					"id": "todoListView",
					"name": "TODO List"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "todoList.addTodo",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "todoList.reopen",
					"group": "inline",
					"when": "view == todoListView && viewItem == completedTodo"
				},
				{
					"command": "todoList.complete",
					"group": "inline",
					"when": "view == todoListView && viewItem == uncompletedTodo"
				},
				{
					"command": "todoList.editTitle",
					"when": "view == todoListView"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"mobx": "^5.15.1",
		"uuid": "^3.3.3"
	}
}